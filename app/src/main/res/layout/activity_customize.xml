<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context="com.example.nils.pilldispenser.Activities.MainActivity">

    <Button
        android:id="@+id/dispenseday"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="50dp"
        android:background="@color/buttoncolor"
        android:onClick="configPillBayButton"
        android:text="Configure a Pill Bay"
        android:textColor="@color/colorAccent"
        android:textSize="20dp" />

    <Button
        android:id="@+id/dispenseindiv"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dispenseday"
        android:layout_marginTop="50dp"
        android:background="@color/buttoncolor"
        android:onClick="configADayButton"
        android:text="Configure a Day's Regiment"
        android:textColor="@color/colorAccent"
        android:textSize="20dp" />

</android.widget.LinearLayout>
