<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nils.pilldispenser.Activities.MainActivity">

    <Button
        android:id="@+id/dispenseday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Dispense a Day's Medicine"
        android:padding="10dp"/>

    <Button
        android:id="@+id/dispenseindiv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dispenseday"
        android:text="Dispense Individual Medicine"
        android:padding="10dp"/>

    <Button
        android:id="@+id/customize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="customizeButtom"
        android:text="Customize"
        android:padding="10dp"/>
</android.widget.LinearLayout>
