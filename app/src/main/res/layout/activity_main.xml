<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context="com.example.nils.pilldispenser.Activities.MainActivity">

    <Button
        android:id="@+id/dispenseday"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/buttoncolor"
        android:onClick="DispenseDayButtom"
        android:padding="20dp"
        android:text="Dispense a Day's Medicine"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/dispenseindiv"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dispenseday"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/buttoncolor"
        android:padding="20dp"
        android:text="Dispense Individual Medicine"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/customize"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/buttoncolor"
        android:onClick="customizeButtom"
        android:padding="20dp"
        android:text="Customize"
        android:textColor="@color/colorAccent" />
</android.widget.LinearLayout>
